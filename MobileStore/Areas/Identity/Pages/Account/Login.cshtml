@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


    <div class="row" style="margin-top: 80px !important;">
        <div class="col">
            <h1 class="text-primary text-center font-weight-bold">Login</h1>
        </div>
    </div>
    <!-- Login section -->
    <div class="row mt-3">
        <form id="account" method="post" class="mx-auto">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-10">
                    <div asp-validation-summary="All" class="text-danger small"></div>
                </div>
            </div>
            
            <div class="row">
                <div class="col">
                    <a class="float-right" id="forgot-password" asp-page="./ForgotPassword">
                        <small class="text-secondary">Forgot your password?</small>
                    </a>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-3 col-form-label"></label>
                <div class="col-9">
                    <input asp-for="Input.Email" class="form-control input-material" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-3 col-form-label"></label>
                <div class="col-9">
                    <input asp-for="Input.Password" class="form-control input-material" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3"></div>
                <div class="col-9">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group text-center mt-5">
                <input class="btn btn-primary btn-material font-weight-bold px-5" type="submit" name="action"
                       value="Login" />
            </div>
            
        </form>
    </div><!-- End Login section-->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
