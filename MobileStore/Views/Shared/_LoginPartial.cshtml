@using Microsoft.AspNetCore.Identity
@using MobileStore.Areas.Identity.Data
@inject SignInManager<MobileStoreUser> SignInManager
@inject UserManager<MobileStoreUser> UserManager

    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
            </li>
            @if (User.IsInRole("User"))
            {
                <li class="nav-item mr-2">
                    <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-lg fa-shopping-cart"></i><span class="product-count">5</span></a>
                </li>
            }
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "User" })">
                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>

        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-lg fa-shopping-cart"></i><span class="product-count">5</span></a>
            </li>
        }
    </ul>
